<Window x:Class="HashCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HashCalculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000">
    <Grid>
        <Button x:Name="button" Content="Choose directory" HorizontalAlignment="Center" Margin="381,17,411,0" VerticalAlignment="Top" Width="200" Click="button_Click" Height="50"/>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="10,178,0,0" VerticalAlignment="Top" Height="590" Width="949"  ItemsSource="{Binding Path=FilesInfo, Mode=TwoWay, NotifyOnTargetUpdated=True, UpdateSourceTrigger=PropertyChanged}" AutoGenerateColumns="True"/>
        <ProgressBar x:Name="calculateProgress" HorizontalAlignment="Left" Height="28" Margin="10,113,0,0" VerticalAlignment="Top" Width="949"  Maximum="{Binding Path=ProgressMax, Mode=TwoWay, NotifyOnTargetUpdated=True, UpdateSourceTrigger=PropertyChanged}" Value="{Binding Path=ProgressValue, Mode=TwoWay, NotifyOnTargetUpdated=True, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</Window>
